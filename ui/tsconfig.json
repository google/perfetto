{
  "extends": "./tsconfig.base.json",
  "include": [ "src/**/*" ],
  "exclude": [
    "./node_modules/",
    "./src/test/diff_viewer/",
    "./src/service_worker/",
    "./src/bigtrace/",
    "./src/gen/",
    "./out"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    // FIXME: remove the 'skipLibCheck' config when the issue 'https://github.com/react-component/picker/issues/764' is fixed
    "skipLibCheck": true,             
    "outDir": "./out/tsc",
    "lib": [
      "dom",                               // Need to be explicitly mentioned now since we're overriding default included libs.
      "es2022",                            // Need this to use Promise.allSettled, replaceAll, etc
    ],
    "paths": {
      "*" : ["*", "./node_modules/@tsundoku/micromodal_types/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  }
}
